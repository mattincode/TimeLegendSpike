<UserControl x:Class="TimeLegendSpike.AirportStaffingBookingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d" MouseLeftButtonDown="AirportStaffingBookingControl_OnMouseLeftButtonDown">

    <Border x:Name="MainBorder"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="BlueViolet"
            CornerRadius="2">
        <TextBlock Text="{Binding Booking.Text, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Border>
</UserControl>
