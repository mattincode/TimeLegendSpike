<UserControl x:Class="TimeLegendSpike.AirportStaffingBookingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <Border x:Name="MainBorder"
            Width="{Binding Booking.Width,
                            RelativeSource={RelativeSource AncestorType=UserControl}}"
            Height="{Binding Booking.Length,
                             RelativeSource={RelativeSource AncestorType=UserControl}}"
            Background="BlueViolet"
            CornerRadius="2">
        <TextBlock Text="{Binding Booking.Text, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Border>
</UserControl>
